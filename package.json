{
  "name": "group-chat-server",
  "version": "1.0.0",
  "description": "Anonymous real-time group chat server",
  "main": "src/server.js",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "quickstart": "npm install && cp .env.example .env && npm run build:ui && npm test && npm start",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "inspect": "npm run dev -- --inspect",
    "lint": "eslint .",
    "build:ui": "rm -rf build/client && mkdir -p build && cd ../group-chat-client && npm run build --prod && cp -r build ../group-chat-server/build/client",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail"
  },
  "author": "Gary Huong",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.12.2",
    "mongoose-unique-validator": "^2.0.3",
    "socket.io": "^3.1.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "socket.io-client": "^4.0.0",
    "supertest": "^6.1.3"
  }
}
