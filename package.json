{
  "name": "group-chat-server",
  "version": "1.0.0",
  "description": "Anonymous real-time group chat server",
  "main": "src/app.js",
  "scripts": {
    "setup": "npm install && cp .env.example .env && npm run test && npm start",
    "start": "nodemon",
    "inspect": "nodemon --inspect",
    "build:ui": "rm -rf build && cd ../group-chat-client && npm run build --prod && cp -r build ../group-chat-client/",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "test": "jest"
  },
  "author": "Gary Huong",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "socket.io": "^3.1.2"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
